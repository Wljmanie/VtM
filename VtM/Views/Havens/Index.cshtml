@model IEnumerable<VtM.Models.Haven>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
    <a asp-action="Create">Create New</a>
        
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.HavenRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publicity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.HavenRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publicity)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <text> | </text>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                @if (User.Identity.IsAuthenticated)
                    {
                       <text> | </text> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
